{
  "name": "emotions",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/neko113/",
  "author": "kms113 <alstn113@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server start:dev\"",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start:pm2": "pnpm --filter server start:pm2",
    "prisma:generate": "pnpm --filter server prisma:generate",
    "prisma:migrate": "pnpm --filter server prisma:migrate",
    "prisma:studio": "pnpm --filter server prisma:studio",
    "prisma:push": "pnpm --filter server prisma:push",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/client/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --config ./packages/client/.eslintrc.js --fix"
    ],
    "packages/server/**/*.ts": [
      "prettier --write",
      "eslint --config ./packages/server/.eslintrc.js --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "28.1.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.3.2",
    "typescript": "^5.1.6"
  }
}
